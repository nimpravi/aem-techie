<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="ClientContext (Design)"
    xtype="panel">
    <items jcr:primaryType="cq:WidgetCollection">
        <path
            jcr:primaryType="cq:Widget"
            defaultValue="/etc/clientcontext/default"
            fieldDescription="Path to the ClientContext"
            fieldLabel="Path"
            name="./path"
            xtype="pathfield"/>
        <segmentPath
            jcr:primaryType="cq:Widget"
            defaultValue="/etc/segmentation"
            fieldDescription="Path to the ClientContext Segments"
            fieldLabel="Segment Path"
            name="./segmentPath"
            xtype="pathfield"/>
    </items>
</jcr:root>
