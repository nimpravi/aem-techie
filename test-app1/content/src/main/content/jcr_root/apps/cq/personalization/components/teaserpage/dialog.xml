<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="420"
    stateful="false"
    title="Properties"
    xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tabs
            jcr:primaryType="cq:Widget"
            xtype="tabpanel">
            <items jcr:primaryType="cq:WidgetCollection">
                <tab
                    jcr:primaryType="cq:Widget"
                    title="Teaser Page"
                    xtype="panel">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <main
                            jcr:primaryType="cq:Widget"
                            collapsed="{Boolean}false"
                            collapsible="{Boolean}false"
                            title=""
                            xtype="dialogfieldset">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <title
                                    jcr:primaryType="nt:unstructured"
                                    allowBlank="false"
                                    fieldLabel="Title"
                                    inputType="text"
                                    name="./jcr:title"
                                    validateOnBlur="true"
                                    xtype="textfield"/>
                                <tags
                                    jcr:primaryType="cq:Widget"
                                    cls="cq-propsdialog-tags"
                                    fieldLabel="Tags/Keywords"
                                    name="./cq:tags"
                                    xtype="tags"/>
                                <tagsHint
                                    jcr:primaryType="cq:Widget"
                                    ignoreData="{Boolean}true"
                                    name="./cq:tags@TypeHint"
                                    value="String[]"
                                    xtype="hidden"/>
                                <description
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Description"
                                    name="./jcr:description"
                                    xtype="textarea"/>
                            </items>
                        </main>
                        <targeting
                            jcr:primaryType="cq:Widget"
                            collapsible="{Boolean}false"
                            title="Targeting"
                            title_commentI18n="Title for content targeting settings"
                            xtype="dialogfieldset">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <location
                                    jcr:primaryType="cq:Widget"
                                    fieldDescription="Location at which this teaser is displayed. Path or identifier."
                                    fieldLabel="Location"
                                    name="./location"
                                    predicate="nosystem"
                                    rootPath="/content"
                                    showTitlesInTree="{Boolean}false"
                                    xtype="pathfield"/>
                            </items>
                        </targeting>
                    </items>
                </tab>
                <advanced
                    jcr:primaryType="cq:Widget"
                    title="Advanced"
                    xtype="panel">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <onofftime
                            jcr:primaryType="cq:Widget"
                            cls="cq-propsdialog-set-onofftime"
                            collapsed="{Boolean}true"
                            collapsible="{Boolean}true"
                            title="On/Off Time"
                            xtype="dialogfieldset">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <panel-description
                                    jcr:primaryType="cq:Widget"
                                    cls="x-form-fieldset-description"
                                    html="Use to override On/Off times from the campaign."
                                    xtype="static"/>
                                <ontime
                                    jcr:primaryType="cq:Widget"
                                    ctCls="cq-propsdialog-ontime"
                                    fieldLabel="On Time"
                                    name="./onTime"
                                    xtype="datetime"/>
                                <offtime
                                    jcr:primaryType="cq:Widget"
                                    ctCls="cq-propsdialog-offtime"
                                    fieldLabel="Off Time"
                                    name="./offTime"
                                    xtype="datetime"/>
                                <ontime-hint
                                    jcr:primaryType="cq:Widget"
                                    ignoreData="{Boolean}true"
                                    name="./onTime@TypeHint"
                                    value="Date"
                                    xtype="hidden"/>
                                <offtime-hint
                                    jcr:primaryType="cq:Widget"
                                    ignoreData="{Boolean}true"
                                    name="./offTime@TypeHint"
                                    value="Date"
                                    xtype="hidden"/>
                            </items>
                        </onofftime>
                        <segments
                            jcr:primaryType="cq:Widget"
                            collapsed="{Boolean}true"
                            collapsible="{Boolean}true"
                            title="Segments"
                            xtype="dialogfieldset">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <panel-description
                                    jcr:primaryType="cq:Widget"
                                    cls="x-form-fieldset-description"
                                    html="Use only for campaigns without experiences."
                                    xtype="static"/>
                                <segments
                                    jcr:primaryType="cq:Widget"
                                    hideLabel="{Boolean}true"
                                    name="./cq:segments"
                                    xtype="multifield">
                                    <fieldConfig
                                        jcr:primaryType="nt:unstructured"
                                        rootPath="/etc/segmentation"
                                        xtype="pathfield"/>
                                </segments>
                                <segmentsHint
                                    jcr:primaryType="cq:Widget"
                                    ignoreData="{Boolean}true"
                                    name="./cq:segments@TypeHint"
                                    value="String[]"
                                    xtype="hidden"/>
                            </items>
                        </segments>
                    </items>
                </advanced>
                <image
                    jcr:primaryType="cq:Widget"
                    path="/libs/foundation/components/page/tab_image.infinity.json"
                    xtype="cqinclude"/>
                <blueprint-tab
                    jcr:primaryType="cq:Widget"
                    path="/libs/foundation/components/page/tab_blueprint.infinity.json"
                    xtype="cqinclude"/>
                <livecopy-tab
                    jcr:primaryType="cq:Widget"
                    path="/libs/foundation/components/page/tab_livecopy.infinity.json"
                    xtype="cqinclude"/>
            </items>
        </tabs>
    </items>
</jcr:root>
