<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Keyword"
    xtype="panel">
    <items jcr:primaryType="cq:WidgetCollection">
        <description
            jcr:primaryType="cq:Widget"
            height="30"
            text="Add trait to the current segment: keyword(s) should match with information from the referring website."
            xtype="static"/>
        <jsObject
            jcr:primaryType="cq:Widget"
            defaultValue="clientcontext.surferinfo"
            name="./jsObject"
            xtype="hidden"/>
        <label
            jcr:primaryType="cq:Widget"
            defaultValue="Referral keywords"
            name="./label"
            xtype="hidden"/>
        <name
            jcr:primaryType="cq:Widget"
            defaultValue="keywords"
            name="./name"
            xtype="hidden"/>
        <operator
            jcr:primaryType="cq:Widget"
            defaultValue="contains"
            name="./operator"
            xtype="hidden"/>
        <value
            jcr:primaryType="cq:Widget"
            fieldDescription="Examples: my business, lucky query..."
            fieldLabel="Referral keywords contain"
            name="./value"
            xtype="textfield"/>
        <valueFormat
            jcr:primaryType="cq:Widget"
            defaultValue=""
            name="./valueFormat"
            xtype="hidden"/>
    </items>
</jcr:root>
