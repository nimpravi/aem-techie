<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Profile Property"
    xtype="panel">
    <items jcr:primaryType="cq:WidgetCollection">
        <description
            jcr:primaryType="cq:Widget"
            height="30"
            text="Add trait to the current segment: any information that is available in the user profile and a specified value."
            xtype="static"/>
        <jsObject
            jcr:primaryType="cq:Widget"
            defaultValue="clientcontext.profile"
            name="./jsObject"
            xtype="hidden"/>
        <name
            jcr:primaryType="cq:Widget"
            defaultValue="gender"
            fieldDescription="Examples: gender, country..."
            fieldLabel="Property Name"
            name="./name"
            type="combobox"
            xtype="selection">
            <options jcr:primaryType="cq:WidgetCollection">
                <o1
                    jcr:primaryType="nt:unstructured"
                    text="Gender"
                    value="gender"/>
                <o2
                    jcr:primaryType="nt:unstructured"
                    text="Age"
                    value="age"/>
                <o3
                    jcr:primaryType="nt:unstructured"
                    text="Interest"
                    value="interest"/>
                <o4
                    jcr:primaryType="nt:unstructured"
                    text="Country"
                    value="country"/>
                <o5
                    jcr:primaryType="nt:unstructured"
                    text="Language"
                    value="language"/>
            </options>
        </name>
        <operator
            jcr:primaryType="cq:Widget"
            defaultValue="equals"
            fieldLabel="Operator"
            name="./operator"
            operators="[equals,greater,greaterorequal,less,lessorequal,notequal,contains,beginswith]"
            type="select"
            xtype="operatorselection"/>
        <value
            jcr:primaryType="cq:Widget"
            fieldDescription="Examples: gender == female, country == France..."
            fieldLabel="Property Value"
            name="./value"
            xtype="textfield"/>
        <valueFormat
            jcr:primaryType="cq:Widget"
            defaultValue=""
            name="./valueFormat"
            xtype="hidden"/>
    </items>
</jcr:root>
