<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    activeTab="{Long}0"
    helpPath="en/cq/current/wcm/default_components.html#Forms Dropdown List"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <first
            jcr:primaryType="nt:unstructured"
            title="Title and Text"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <title
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Title"
                    name="./jcr:title"
                    xtype="textfield"/>
                <hideTitle
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Hide Title"
                    inputValue="true"
                    name="./hideTitle"
                    type="checkbox"
                    xtype="selection"/>
                <description
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Description"
                    name="./jcr:description"
                    xtype="textfield"/>
                <readOnlyField
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Read Only"
                    inputValue="true"
                    name="./readOnlyField"
                    type="checkbox"
                    xtype="selection"/>
                <multiSelection
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Multi Selectable"
                    inputValue="true"
                    name="./multiSelection"
                    type="checkbox"
                    xtype="selection"/>
                <multiValues
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Enter values in the form {value}={text}."
                    fieldLabel="Items"
                    name="./options"
                    xtype="multifield"/>
                <helpText
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Help text"
                    name="./helpText"
                    xtype="textfield"/>
                <hideHelpText
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Hide help text"
                    inputValue="true"
                    name="./hideHelpText"
                    type="checkbox"
                    xtype="selection"/>
            </items>
        </first>
        <second
            jcr:primaryType="nt:unstructured"
            title="Initial Values"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <value
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Enter a value that exists in the list of items."
                    fieldLabel="Default Values"
                    name="./defaultValue"
                    xtype="multifield"/>
            </items>
        </second>
        <fourth
            jcr:primaryType="nt:unstructured"
            title="Constraints"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <required
                    jcr:primaryType="cq:Widget"
                    defaultValue="true"
                    fieldLabel="Required"
                    inputValue="true"
                    name="./required"
                    type="checkbox"
                    xtype="selection"/>
                <requiredMessage
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Required Message"
                    name="./requiredMessage"
                    xtype="textarea"/>
            </items>
        </fourth>
        <styling
            jcr:primaryType="nt:unstructured"
            title="Styling"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <multiLine
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Size"
                    heightParameter="./rows"
                    heightSuffix="rows"
                    widthParameter="./cols"
                    widthSuffix="cols"
                    xtype="sizefield"/>
                <width
                    jcr:primaryType="cq:Widget"
                    anchor=""
                    fieldLabel="Width"
                    name="./width"
                    width="48"
                    xtype="textfield"/>
                <class
                    jcr:primaryType="cq:Widget"
                    anchor=""
                    fieldLabel="CSS"
                    name="./css"
                    xtype="textfield"/>
                <errorLabelCSS
                    jcr:primaryType="cq:Widget"
                    anchor=""
                    defaulValue="errorLabel"
                    fieldLabel="Error Label CSS"
                    name="./errorLabelCSS"
                    xtype="textfield"/>
            </items>
        </styling>
    </items>
</jcr:root>
