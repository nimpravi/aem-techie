<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="dialog"
    xtype="dialog">
    <items jcr:primaryType="cq:TabPanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="collapsible Text &amp; Image Desc">
                <items jcr:primaryType="cq:WidgetCollection">
                    <anchor
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        fieldDescription="* Do not enter special characters in Anchor"
                        fieldLabel="Anchor"
                        name="./anchor"
                        xtype="textfield">
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            change="function(){this.setValue(this.getValue().trim());}"/>
                    </anchor>
                    <label
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        fieldLabel="collapsible Text &amp; Image Label"
                        name="./label"
                        xtype="textfield"/>
                    <imgposition
                        jcr:primaryType="cq:Widget"
                        defaultValue="top"
                        fieldLabel="Image Position"
                        name="./imgposition"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <top
                                jcr:primaryType="nt:unstructured"
                                text="Top"
                                value="top"/>
                            <bottom
                                jcr:primaryType="nt:unstructured"
                                text="Bottom"
                                value="bottom"/>
                            <left
                                jcr:primaryType="nt:unstructured"
                                text="Left"
                                value="left"/>
                            <right
                                jcr:primaryType="nt:unstructured"
                                text="Right"
                                value="right"/>
                        </options>
                    </imgposition>
                    <text
                        jcr:primaryType="cq:Widget"
                        editElementQuery="div[class=&quot;text&quot;]"
                        fieldDescription="For a new Line: Press(Shift +Enter) and for a new paragraph press (Enter)"
                        fieldLabel="Text Area"
                        height="600"
                        name="./accordtext"
                        width="700"
                        xtype="richtext">
                        <rtePlugins
                            jcr:primaryType="nt:unstructured"
                            features="*">
                            <edit
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <font
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <format
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <justify
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <links jcr:primaryType="nt:unstructured">
                                <linkDialogConfig
                                    jcr:primaryType="nt:unstructured"
                                    height="{Long}316">
                                    <linkAttributes jcr:primaryType="cq:WidgetCollection">
                                        <linkAdvanced
                                            jcr:primaryType="cq:Widget"
                                            collapsed="{Boolean}true"
                                            collapsible="{Boolean}true"
                                            inputValue="advanced"
                                            name="./linkdialog/cq:adhocLinkTrackingTab"
                                            title="Link tracking"
                                            xtype="dialogfieldset">
                                            <items jcr:primaryType="cq:WidgetCollection">
                                                <enable
                                                    jcr:primaryType="nt:unstructured"
                                                    attribute="enabletracking"
                                                    fieldDescription="override analytics framework settings"
                                                    fieldLabel="Custom link tracking"
                                                    name="./linkdialog/cq:adhocLinkTrackingEnableTracking"
                                                    xtype="checkbox">
                                                    <listeners
                                                        jcr:primaryType="nt:unstructured"
                                                        check="function(component){var dlg=component.findParentByType('rtelinkdialog');dlg.enableSCFields(component.checked);}"/>
                                                </enable>
                                                <evars
                                                    jcr:primaryType="nt:unstructured"
                                                    attribute="adhocevars"
                                                    fieldDescription="e.g.: eVar1: pagedata.url, prop4: 'const'"
                                                    fieldLabel="Include SiteCatalyst variables"
                                                    name="./linkdialog/cq:adhocLinkTrackingEvars"
                                                    xtype="textfield"/>
                                                <events
                                                    jcr:primaryType="nt:unstructured"
                                                    attribute="adhocevents"
                                                    fieldDescription="e.g.: event2, event7"
                                                    fieldLabel="Include SiteCatalyst events"
                                                    name="./linkdialog/cq:adhocLinkTrackingEvents"
                                                    xtype="textfield"/>
                                            </items>
                                        </linkAdvanced>
                                    </linkAttributes>
                                </linkDialogConfig>
                            </links>
                            <lists
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <table
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <undo
                                jcr:primaryType="nt:unstructured"
                                features="[undo]"/>
                        </rtePlugins>
                    </text>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="cq:Panel"
                title="Image">
                <items jcr:primaryType="cq:WidgetCollection">
                    <image
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}true"
                        allowUpload="{Boolean}false"
                        boxMaxWidth="300"
                        ddGroups="[media]"
                        disableZoom="{Boolean}true"
                        fileNameParameter="./accfileName"
                        fileReferenceParameter="./accfileReference"
                        height="200"
                        name="./footerfile"
                        title="Image"
                        uploadUrl="/tmp/upload/*"
                        xtype="smartimage"/>
                </items>
            </tab2>
        </items>
    </items>
</jcr:root>
