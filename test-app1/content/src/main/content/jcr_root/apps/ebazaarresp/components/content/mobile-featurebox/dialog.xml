<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    id="featureBoxDialog"
    title=" "
    width="1000"
    xtype="dialog">
    <items jcr:primaryType="cq:TabPanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Feature">
                <items jcr:primaryType="cq:WidgetCollection">
                    <featurebox
                        jcr:primaryType="cq:Widget"
                        customMultiFieldName="./numberofitems"
                        fieldLabel="Feature Box"
                        name="./featurebox"
                        xtype="custommultifield">
                        <fieldConfig jcr:primaryType="cq:WidgetCollection">
                            <Image
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Image"
                                name="./image"
                                rootPath="/content/dam"
                                xtype="pathfield"/>
                            <text
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Text"
                                height="100"
                                isDroppingAllowed="true"
                                name="./text"
                                syncValue="function(){if (this.initialized) {            var html = this.editorKernel.getProcessedHtml();            if (this.fireEvent(&quot;beforesync&quot;, this, html) !== false) {            &#x9;if(this.el.dom){                this.el.dom.value = html;                this.fireEvent(&quot;sync&quot;, this, html);            &#x9;}            }        }}"
                                xtype="richtext">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <misctools
                                        jcr:primaryType="nt:unstructured"
                                        features="[sourceedit]"/>
                                </rtePlugins>
                            </text>
                            <url
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Link"
                                linkPattern="\{0}.html"
                                name="./url"
                                rootPath="/content"
                                xtype="pathfield"/>
                            <align
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Align"
                                name="./align"
                                type="select"
                                xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <imgtxt
                                        jcr:primaryType="nt:unstructured"
                                        text="Image - Text"
                                        value="imgtxt"/>
                                    <txtimg
                                        jcr:primaryType="nt:unstructured"
                                        text="Text - Image"
                                        value="txtimg"/>
                                </options>
                            </align>
                            <boxtitle
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Feature box title"
                                height="100"
                                isDroppingAllowed="true"
                                name="./boxtitle"
                                syncValue="function(){if (this.initialized) {            var html = this.editorKernel.getProcessedHtml();            if (this.fireEvent(&quot;beforesync&quot;, this, html) !== false) {            &#x9;if(this.el.dom){                this.el.dom.value = html;                this.fireEvent(&quot;sync&quot;, this, html);            &#x9;}            }        }}"
                                xtype="richtext">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <misctools
                                        jcr:primaryType="nt:unstructured"
                                        features="[sourceedit]"/>
                                </rtePlugins>
                            </boxtitle>
                        </fieldConfig>
                    </featurebox>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
