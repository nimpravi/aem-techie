<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Activity Feed (Design)"
    xtype="panel">
    <items jcr:primaryType="cq:WidgetCollection">
        <color
            jcr:primaryType="cq:Widget"
            fieldLabel="Color Scheme"
            name="./color"
            type="select"
            xtype="selection">
            <options jcr:primaryType="cq:WidgetCollection">
                <dark
                    jcr:primaryType="nt:unstructured"
                    text="Dark color scheme"
                    value="dark"/>
                <light
                    jcr:primaryType="nt:unstructured"
                    text="Light color scheme"
                    value="light"/>
            </options>
        </color>
        <font
            jcr:primaryType="nt:unstructured"
            fieldLabel="Font"
            name="./font"
            type="select"
            xtype="selection">
            <options jcr:primaryType="cq:WidgetCollection">
                <arial
                    jcr:primaryType="nt:unstructured"
                    text="Arial"
                    value="arial"/>
                <default
                    jcr:primaryType="nt:unstructured"
                    text=""
                    value=""/>
                <lucida
                    jcr:primaryType="nt:unstructured"
                    text="Lucida Grande"
                    value="lucida grande"/>
                <segoe
                    jcr:primaryType="nt:unstructured"
                    text="Segoe UI"
                    value="segoe ui"/>
                <tahoma
                    jcr:primaryType="nt:unstructured"
                    text="Tahoma"
                    value="tahoma"/>
                <trebuchet
                    jcr:primaryType="nt:unstructured"
                    text="Trebuchet MS"
                    value="trebuchet ms"/>
                <verdana
                    jcr:primaryType="nt:unstructured"
                    text="Verdana"
                    value="verdana"/>
            </options>
        </font>
        <height
            jcr:primaryType="cq:Widget"
            fieldLabel="Height"
            name="./height"
            xtype="textfield"/>
        <width
            jcr:primaryType="cq:Widget"
            fieldLabel="Width"
            name="./width"
            xtype="textfield"/>
    </items>
</jcr:root>
