<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Shopping Cart"
    xtype="panel">
    <items jcr:primaryType="cq:WidgetCollection">
        <emptyMessage
            jcr:primaryType="cq:Widget"
            fieldLabel="Empty cart message"
            name="./emptyCartMessage"
            xtype="textfield"/>
        <itemPriceLabel
            jcr:primaryType="cq:Widget"
            fieldLabel="Price label"
            name="./itemPriceLabel"
            xtype="textfield"/>
        <productLabel
            jcr:primaryType="cq:Widget"
            fieldLabel="Product label"
            name="./productLabel"
            xtype="textfield"/>
        <quantityLabel
            jcr:primaryType="cq:Widget"
            fieldLabel="Quantity label"
            name="./quantityLabel"
            xtype="textfield"/>
        <readOnly
            jcr:primaryType="cq:Widget"
            boxLabel="Show read-only summary of cart"
            fieldLabel=""
            inputValue="true"
            name="./readOnly"
            xtype="checkbox"/>
        <thumbnails
            jcr:primaryType="cq:Widget"
            boxLabel="Show product thumbnail images"
            fieldLabel=""
            inputValue="true"
            name="./showThumbnails"
            xtype="checkbox"/>
    </items>
</jcr:root>
