<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Product config"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Product Details">
                <items jcr:primaryType="cq:WidgetCollection">
                    <Categories
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        fieldLabel="Choose the Product Category:"
                        name="./category"
                        options="$PATH.categorydata.json"
                        type="select"
                        xtype="selection">
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            loadcontent="function(field,record,path){productsvalue(field,field.value);}"
                            selectionchanged="function(box,value){productsvalue(box,value);}"/>
                    </Categories>
                    <CategoriesProducts
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        fieldLabel="Choose the Product:"
                        id="categoryProduct"
                        name="./prodCode"
                        type="select"
                        xtype="selection">
                        <listeners jcr:primaryType="nt:unstructured"/>
                    </CategoriesProducts>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
