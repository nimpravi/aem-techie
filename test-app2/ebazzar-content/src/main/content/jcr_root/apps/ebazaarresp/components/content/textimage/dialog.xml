<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:TabPanel"
    activeTab="0"
    height="600"
    helpPath="en/cq/current/wcm/default_components.html#Text Image"
    width="600"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab1
            jcr:primaryType="cq:Widget"
            anchor="100%"
            title="Text"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <richFlag
                    jcr:primaryType="cq:Widget"
                    ignoreData="{Boolean}true"
                    name="./textIsRich"
                    value="true"
                    xtype="hidden"/>
                <text
                    jcr:primaryType="cq:Widget"
                    editElementQuery="div[class=&quot;text&quot;]"
                    fieldDescription="For a new Line: Press(Shift +Enter) and for a new paragraph press (Enter)"
                    fieldLabel="Text Area"
                    height="600"
                    name="./text"
                    width="700"
                    xtype="richtext">
                    <rtePlugins
                        jcr:primaryType="nt:unstructured"
                        features="*">
                        <color
                            jcr:primaryType="nt:unstructured"
                            features="*">
                            <styles jcr:primaryType="cq:WidgetCollection">
                                <blue
                                    jcr:primaryType="nt:unstructured"
                                    cssName="blue"
                                    text="Blue"/>
                                <green
                                    jcr:primaryType="nt:unstructured"
                                    cssName="green"
                                    text="Green"/>
                                <indigo
                                    jcr:primaryType="nt:unstructured"
                                    cssName="indigo"
                                    text="Indigo"/>
                                <orange
                                    jcr:primaryType="nt:unstructured"
                                    cssName="orange"
                                    text="Orange"/>
                                <red
                                    jcr:primaryType="nt:unstructured"
                                    cssName="red"
                                    text="Red"/>
                                <violet
                                    jcr:primaryType="nt:unstructured"
                                    cssName="violet"
                                    text="Violet"/>
                                <yellow
                                    jcr:primaryType="nt:unstructured"
                                    cssName="yellow"
                                    text="Yellow"/>
                            </styles>
                        </color>
                        <edit
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <font
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <format
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <justify
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <lists
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <misctools
                            jcr:primaryType="nt:unstructured"
                            features="[specialchars]">
                            <specialCharsConfig jcr:primaryType="nt:unstructured">
                                <chars jcr:primaryType="nt:unstructured">
                                    <bracket
                                        jcr:primaryType="nt:unstructured"
                                        entity="&amp;#187;"/>
                                </chars>
                            </specialCharsConfig>
                        </misctools>
                        <paraformat
                            jcr:primaryType="nt:unstructured"
                            features="*">
                            <formats jcr:primaryType="cq:WidgetCollection">
                                <paragraph
                                    jcr:primaryType="nt:unstructured"
                                    description="Paragraph"
                                    tag="p"/>
                                <heading1
                                    jcr:primaryType="nt:unstructured"
                                    description="Heading 1"
                                    tag="h1"/>
                                <heading2
                                    jcr:primaryType="nt:unstructured"
                                    description="Heading 2"
                                    tag="h2"/>
                                <heading3
                                    jcr:primaryType="nt:unstructured"
                                    description="Heading 3"
                                    tag="h3"/>
                                <heading4
                                    jcr:primaryType="nt:unstructured"
                                    description="Heading 4"
                                    tag="h4"/>
                                <heading5
                                    jcr:primaryType="nt:unstructured"
                                    description="Heading 5"
                                    tag="h5"/>
                                <heading6
                                    jcr:primaryType="nt:unstructured"
                                    description="Heading 6"
                                    tag="h6"/>
                                <blockquote
                                    jcr:primaryType="nt:unstructured"
                                    description="Address"
                                    tag="blockquote"/>
                            </formats>
                        </paraformat>
                        <styles
                            jcr:primaryType="nt:unstructured"
                            features="*">
                            <styles jcr:primaryType="cq:WidgetCollection">
                                <focusbartitle
                                    jcr:primaryType="nt:unstructured"
                                    cssName="focus_title"
                                    text="Focus Bar Title"/>
                                <positionleft
                                    jcr:primaryType="nt:unstructured"
                                    cssName="place-left"
                                    text="Position Left"/>
                                <positionright
                                    jcr:primaryType="nt:unstructured"
                                    cssName="place-right"
                                    text="Position Right"/>
                                <positioncenter
                                    jcr:primaryType="nt:unstructured"
                                    cssName="place-center"
                                    text="Position Center"/>
                                <rightquote
                                    jcr:primaryType="nt:unstructured"
                                    cssName="right_quote"
                                    text="Green Quote"/>
                                <leadershiptitle
                                    jcr:primaryType="nt:unstructured"
                                    cssName="leadership"
                                    text="Leadership Title"/>
                                <lowercase
                                    jcr:primaryType="nt:unstructured"
                                    cssName="lowercase"
                                    text="Lower Case"/>
                                <warnonleave
                                    jcr:primaryType="nt:unstructured"
                                    cssName="warnonleave"
                                    text="Warn on Leave Link"/>
                                <warnonexit
                                    jcr:primaryType="nt:unstructured"
                                    cssName="warnonexit"
                                    text="Warn on Exit Link"/>
                                <introParagraph
                                    jcr:primaryType="nt:unstructured"
                                    cssName="introParagraph"
                                    text="Introduction Paragraph"/>
                                <greenarrowlink
                                    jcr:primaryType="nt:unstructured"
                                    cssName="ATop"
                                    text="Green Arrow Link"/>
                                <greenarrowlinkwl
                                    jcr:primaryType="nt:unstructured"
                                    cssName="warnonleave ATop"
                                    text="Green Arrow Warnon Leave"/>
                                <greenarrowlinkwe
                                    jcr:primaryType="nt:unstructured"
                                    cssName="warnonexit ATop"
                                    text="Green Arrow Warnon Exit"/>
                                <xsmall
                                    jcr:primaryType="nt:unstructured"
                                    cssName="font13"
                                    text="Font Size 13px"/>
                                <xxsmall
                                    jcr:primaryType="nt:unstructured"
                                    cssName="font12"
                                    text="Font Size 12px"/>
                                <focusbartitle2
                                    jcr:primaryType="nt:unstructured"
                                    cssName="focus_title2"
                                    text="Focus Bar Title [15 px]"/>
                                <warnon3rdparty
                                    jcr:primaryType="nt:unstructured"
                                    cssName="warnon3rdparty"
                                    text="Warn on Leave2"/>
                                <introParagraphCareers
                                    jcr:primaryType="nt:unstructured"
                                    cssName="introParagraphCareers"
                                    text="Introduction Paragraph Careers"/>
                            </styles>
                        </styles>
                        <table
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <undo
                            jcr:primaryType="nt:unstructured"
                            features="[undo]"/>
                        <links jcr:primaryType="nt:unstructured">
                            <linkDialogConfig
                                jcr:primaryType="nt:unstructured"
                                height="{Long}316">
                                <linkAttributes jcr:primaryType="cq:WidgetCollection">
                                    <linkAdvanced
                                        jcr:primaryType="cq:Widget"
                                        collapsed="{Boolean}true"
                                        collapsible="{Boolean}true"
                                        inputValue="advanced"
                                        name="./linkdialog/cq:adhocLinkTrackingTab"
                                        title="Link tracking"
                                        xtype="dialogfieldset">
                                        <items jcr:primaryType="cq:WidgetCollection">
                                            <enable
                                                jcr:primaryType="nt:unstructured"
                                                attribute="enabletracking"
                                                fieldDescription="override analytics framework settings"
                                                fieldLabel="Custom link tracking"
                                                name="./linkdialog/cq:adhocLinkTrackingEnableTracking"
                                                xtype="checkbox">
                                                <listeners
                                                    jcr:primaryType="nt:unstructured"
                                                    check="function(component){var dlg=component.findParentByType('rtelinkdialog');dlg.enableSCFields(component.checked);}"/>
                                            </enable>
                                            <evars
                                                jcr:primaryType="nt:unstructured"
                                                attribute="adhocevars"
                                                fieldDescription="e.g.: eVar1: pagedata.url, prop4: 'const'"
                                                fieldLabel="Include SiteCatalyst variables"
                                                name="./linkdialog/cq:adhocLinkTrackingEvars"
                                                xtype="textfield"/>
                                            <events
                                                jcr:primaryType="nt:unstructured"
                                                attribute="adhocevents"
                                                fieldDescription="e.g.: event2, event7"
                                                fieldLabel="Include SiteCatalyst events"
                                                name="./linkdialog/cq:adhocLinkTrackingEvents"
                                                xtype="textfield"/>
                                        </items>
                                    </linkAdvanced>
                                </linkAttributes>
                            </linkDialogConfig>
                        </links>
                    </rtePlugins>
                </text>
            </items>
        </tab1>
        <tab2
            jcr:primaryType="cq:Widget"
            cropParameter="./image/imageCrop"
            ddGroups="[media]"
            disableZoom="{Boolean}true"
            fileNameParameter="./image/fileName"
            fileReferenceParameter="./image/fileReference"
            name="./image/file"
            requestSuffix="/image.img.png"
            rotateParameter="./image/imageRotate"
            sizeLimit="100"
            title="Image"
            xtype="html5smartimage"/>
        <tab3
            jcr:primaryType="cq:Widget"
            title="Advanced Image Properties"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <resType
                    jcr:primaryType="cq:Widget"
                    ignoreData="{Boolean}true"
                    name="./image/sling:resourceType"
                    value="foundation/components/image"
                    xtype="hidden"/>
                <imagePosition
                    jcr:primaryType="cq:Widget"
                    default="imageLeft"
                    fieldLabel="Image Position"
                    name="./imagePosition"
                    type="select"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <left
                            jcr:primaryType="nt:unstructured"
                            text="Left"
                            value="imageLeft"/>
                        <right
                            jcr:primaryType="nt:unstructured"
                            text="Right"
                            value="imageRight"/>
                        <top
                            jcr:primaryType="nt:unstructured"
                            text="Top"
                            value="imageTop"/>
                    </options>
                </imagePosition>
                <size
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Width x Height (Note: Image width more than 700px will be resized according  to the parent panel)&#xa;"
                    fieldLabel="Size"
                    heightParameter="./image/height"
                    widthParameter="./image/width"
                    xtype="sizefield"/>
                <topContentBeak
                    jcr:primaryType="nt:unstructured"
                    fieldDescription="Check for Top Rule Line"
                    fieldLabel="Top Content Break"
                    name="./topContentBeakNew"
                    type="select"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <big
                            jcr:primaryType="nt:unstructured"
                            text="Green Big Margin"
                            value="green"/>
                        <medium
                            jcr:primaryType="nt:unstructured"
                            text="Green Medium Margin"
                            value="green medium"/>
                        <small
                            jcr:primaryType="nt:unstructured"
                            text="Green Small Margin"
                            value="green small"/>
                        <none
                            jcr:primaryType="nt:unstructured"
                            text="None"
                            value="none"/>
                    </options>
                </topContentBeak>
                <bottomContentBreak
                    jcr:primaryType="nt:unstructured"
                    defaultValue="none"
                    fieldDescription="Check for Bottom Rule Line"
                    fieldLabel="Bottom Content Break"
                    name="./bottomContentBreakNew"
                    type="select"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <big
                            jcr:primaryType="nt:unstructured"
                            text="Green Big Margin"
                            value="green"/>
                        <medium
                            jcr:primaryType="nt:unstructured"
                            text="Green Medium Margin"
                            value="green medium"/>
                        <small
                            jcr:primaryType="nt:unstructured"
                            text="Green Small Margin"
                            value="green small"/>
                        <none
                            jcr:primaryType="nt:unstructured"
                            text="None"
                            value="none"/>
                    </options>
                </bottomContentBreak>
                <marginindent
                    jcr:primaryType="cq:Widget"
                    defaultValue="none"
                    fieldDescription="These options are used only in specific scenarios."
                    fieldLabel="Image Alignment Option"
                    name="./marginindent"
                    type="select"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <topright
                            jcr:primaryType="nt:unstructured"
                            text="Indent Image Top Right"
                            value="imageIndentTopright"/>
                        <right
                            jcr:primaryType="nt:unstructured"
                            text="Indent Image Right"
                            value="imageIndentRight"/>
                        <right35
                            jcr:primaryType="nt:unstructured"
                            text="Indent Image Right 35"
                            value="imageIndentRight35"/>
                        <none
                            jcr:primaryType="nt:unstructured"
                            text="None"
                            value="none"/>
                        <marginbottom0
                            jcr:primaryType="nt:unstructured"
                            text="Margin Bottom 0px"
                            value="marginbottom0"/>
                    </options>
                </marginindent>
            </items>
        </tab3>
    </items>
</jcr:root>
