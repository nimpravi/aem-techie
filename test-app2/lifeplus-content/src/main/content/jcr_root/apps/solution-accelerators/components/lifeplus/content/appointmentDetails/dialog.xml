<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="appointment_dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Tab 1"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <reasonForVisit
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Reason for visit"
                        name="./reasonForVisit"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <opt1
                                jcr:primaryType="nt:unstructured"
                                text="constant migranes"
                                value="constant migranes"/>
                            <opt2
                                jcr:primaryType="nt:unstructured"
                                text="constant headache"
                                value="constant headache"/>
                            <opt3
                                jcr:primaryType="nt:unstructured"
                                text="constant backache"
                                value="constant backache"/>
                        </options>
                    </reasonForVisit>
                    <insurance
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Insurance"
                        name="./insurance"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <opt1
                                jcr:primaryType="nt:unstructured"
                                text="I'm paying"
                                value="I'm paying"/>
                            <opt2
                                jcr:primaryType="nt:unstructured"
                                text="I'm not paying"
                                value="I'm not paying"/>
                        </options>
                    </insurance>
                    <appointmentFor
                        jcr:primaryType="cq:Widget"
                        default="me"
                        fieldLabel="The appointment is for"
                        name="./appointmentFor"
                        type="radio"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <me
                                jcr:primaryType="nt:unstructured"
                                text="me"
                                value="me"/>
                            <someone
                                jcr:primaryType="nt:unstructured"
                                text="someone else"
                                value="someone else"/>
                            <listeners
                                jcr:primaryType="nt:unstructured"
                                selectionchanged=""/>
                        </options>
                    </appointmentFor>
                    <fullName
                        jcr:primaryType="cq:Widget"
                        fieldLabel="First and Last name"
                        name="./fullname"
                        xtype="textfield"/>
                    <gender
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Gender"
                        name="./gender"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <male
                                jcr:primaryType="nt:unstructured"
                                text="male"
                                value="male"/>
                            <female
                                jcr:primaryType="nt:unstructured"
                                text="female"
                                value="female"/>
                        </options>
                    </gender>
                    <email
                        jcr:primaryType="cq:Widget"
                        fieldLabel="email(optional)"
                        name="./email"
                        xtype="textfield"/>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="cq:Panel"
                title="Tab 2"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <code
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Verify code"
                        name="./verifycode"
                        xtype="textfield"/>
                </items>
            </tab2>
            <tab3
                jcr:primaryType="cq:Panel"
                title="Tab 3"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <confirm
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Confirm"
                        name="./confirm"
                        xtype="textfield"/>
                </items>
            </tab3>
        </items>
    </items>
</jcr:root>
