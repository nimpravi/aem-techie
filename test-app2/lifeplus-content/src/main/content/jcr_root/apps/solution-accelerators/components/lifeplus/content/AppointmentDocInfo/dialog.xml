<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Test Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Test Component Details">
                <items jcr:primaryType="cq:WidgetCollection">
                    <enabledisclaimer
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Show Description?"
                        name="./showdescription"
                        type="checkbox"
                        xtype="selection"/>
                    <type
                        jcr:primaryType="cq:Widget"
                        defaultValue="{Boolean}false"
                        fieldLabel="Image"
                        name="./Image"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <o1
                                jcr:primaryType="nt:unstructured"
                                text="ProfileImage"
                                value="PI"/>
                            <o2
                                jcr:primaryType="nt:unstructured"
                                text="IconImage"
                                value="II"/>
                        </options>
                    </type>
                    <description
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Description"
                        name="./desc"
                        xtype="richtext"/>
                    <title
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title"
                        name="./title"
                        xtype="textfield"/>
                    <size
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Size"
                        name="./Size"
                        xtype="textfield"/>
                    <Availability
                        jcr:primaryType="cq:Widget"
                        defaultValue="{Boolean}false"
                        fieldLabel="Availability"
                        name="./Availability"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <o1
                                jcr:primaryType="nt:unstructured"
                                text="Availability"
                                value="avail"/>
                            <o2
                                jcr:primaryType="nt:unstructured"
                                text="FinaltimeAppointment"
                                value="FTA"/>
                        </options>
                    </Availability>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
