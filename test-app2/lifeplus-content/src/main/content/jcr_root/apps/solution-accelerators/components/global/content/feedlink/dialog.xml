<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Divider Component Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                id="tab1"
                title="General">
                <items jcr:primaryType="cq:WidgetCollection">
                    <icon
                        jcr:primaryType="cq:Widget"
                        defaultValue="{Boolean}false"
                        fieldLabel="Icon"
                        name="./icon"
                        type="checkbox"
                        xtype="selection"/>
                    <text
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Link Text"
                        name="./text"
                        xtype="textfield"/>
                    <format
                        jcr:primaryType="cq:Widget"
                        defaultValue="atom"
                        fieldLabel="Format"
                        name="./format"
                        type="radio"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <atom
                                jcr:primaryType="nt:unstructured"
                                text="Atom 1.0"
                                value="atom"/>
                            <rss
                                jcr:primaryType="nt:unstructured"
                                text="RSS 2.0"
                                value="rss"/>
                        </options>
                    </format>
                    <feedFields
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Feed Fields"
                        hidden="true"
                        id="feedFieldsId"
                        name="./feedFields"
                        optionsTextField="text"
                        optionsValueField="value"
                        type="checkbox"
                        xtype="selection"/>
                    <button
                        jcr:primaryType="cq:Widget"
                        id="button"
                        name="./button"
                        text="Submit"
                        xtype="button">
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            click="function(box) { &#xa;&#x9;var pagePath = CQ.WCM.getPagePath();&#xa;&#x9;var json = &quot;&quot;;&#xa;&#x9;var requestType = &quot;feed-fields&quot;;&#xa;&#x9;var queryParams = &quot;requestType=&quot;+requestType+&quot;&amp;listroot=&quot;+pagePath;&#xa;&#x9;$.post(&quot;/bin/CustomFeedServlet&quot;,queryParams, function(data) {&#xa;&#x9;&#x9;json = data;&#xa;&#x9;&#x9;box.findParentByType('tabpanel').getComponent(&quot;tab1&quot;).getComponent(&quot;feedFieldsId&quot;).show();&#xa;&#x9;&#x9;box.findParentByType('tabpanel').getComponent(&quot;tab1&quot;).getComponent(&quot;feedFieldsId&quot;).setOptions(data);&#xa;&#x9;},'json');&#xa;}&#xa;&#x9;"/>
                    </button>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
